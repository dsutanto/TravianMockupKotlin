<merge xmlns:android="http://schemas.android.com/apk/res/android">


    <Button
        android:id="@+id/home_button"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/Dim10dp"
        android:drawableTop="@drawable/ic_card_travel_teal_400_36dp"
        android:fontFamily="sans-serif"
        android:padding="@dimen/Dim15dp"
        android:text="Tour"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:typeface="normal"
        android:textColor="@color/black"
        android:background="@drawable/home_button_ripple"
        android:elevation="50dp"/>

    <Button
        android:id="@+id/airport_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/Dim10dp"
        android:layout_toEndOf="@+id/home_button"
        android:drawableTop="@drawable/ic_directions_bus_blue_600_36dp"
        android:fontFamily="sans-serif"
        android:padding="@dimen/Dim15dp"
        android:text="Airport\nTransfer"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:typeface="normal"
        android:textColor="@color/black"
        android:background="@drawable/home_button_ripple"
        android:elevation="50dp"/>

    <Button
        android:id="@+id/souvenir_button"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toEndOf="@+id/airport_button"
        android:drawableTop="@drawable/ic_card_giftcard_cyan_300_36dp"
        android:fontFamily="sans-serif"
        android:padding="@dimen/Dim15dp"
        android:text="Souvenir"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:typeface="normal"
        android:textColor="@color/black"
        android:background="@drawable/home_button_ripple"
        android:elevation="50dp"/>

</merge>
